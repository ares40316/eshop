<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <!-- 定義 Product 類別對應的資料表，這裡是 'product' 資料表 -->
    <class name="com.example.pojo.entity.user.Product" table="product">
        <!-- 註解：商品資料表 -->
        <comment>商品資料表</comment>

        <!-- 商品編號 -->
        <id name="id" type="java.lang.String">
            <column name="id" length="20" />
            <generator class="com.example.utils.IdGenerateUtil" />
        </id>

        <!-- 商品名稱 -->
        <property name="name" type="java.lang.String">
            <column name="name" length="100">
                <comment>商品名稱</comment>
            </column>
        </property>

        <!-- 售價（單位：元） -->
        <property name="price" type="java.lang.Integer">
            <column name="price">
                <comment>商品售價（元）</comment>
            </column>
        </property>

        <!-- 商品簡介 -->
        <property name="summary" type="java.lang.String">
            <column name="summary">
                <comment>商品簡介</comment>
            </column>
        </property>

        <!-- 商品詳細說明 -->
        <property name="description" type="java.lang.String">
            <column name="description">
                <comment>商品詳細說明</comment>
            </column>
        </property>

        <!-- 圖片路徑 -->
        <property name="imagePath" type="java.lang.String">
            <column name="image_path" length="255">
                <comment>商品主圖路徑</comment>
            </column>
        </property>

        <!-- 分類編號 -->
        <many-to-one name="category" class="com.example.pojo.entity.user.Category">
            <column name="category_id" length="20">
                <comment>分類編號</comment>
            </column>
        </many-to-one>

        <!-- 是否上架 -->
        <property name="isAvailable" type="java.lang.Boolean">
            <column name="is_available">
                <comment>是否上架</comment>
            </column>
        </property>

        <!-- 上架時間 -->
        <property name="createdAt" type="java.util.Date">
            <column name="created_at">
                <comment>上架時間</comment>
            </column>
        </property>

        <!-- 庫存數量 -->
        <property name="stock" type="java.lang.Integer">
            <column name="stock">
                <comment>商品庫存數量</comment>
            </column>
        </property>
    </class>
</hibernate-mapping>
