<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <!-- 定義 Category 類別對應的資料表，這裡是 'category' 資料表 -->
    <class name="com.example.pojo.entity.user.Category" table="category">
        <comment>商品分類資料表</comment>

        <!-- 分類編號（主鍵） -->
        <id name="id" type="java.lang.String">
            <column name="id" length="20" />
            <generator class="com.example.utils.IdGenerateUtil" />
        </id>

        <!-- 分類名稱 -->
        <property name="name" type="java.lang.String">
            <column name="name" length="50">
                <comment>分類名稱</comment>
            </column>
        </property>

        <!-- 排序編號（數字越小越前面） -->
        <property name="sortOrder" type="java.lang.Integer">
            <column name="sort_order">
                <comment>分類排序編號</comment>
            </column>
        </property>
    </class>
</hibernate-mapping>
