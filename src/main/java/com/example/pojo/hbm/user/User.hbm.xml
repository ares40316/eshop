<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- 指定 Hibernate 對應的 Java 類別所屬 package -->
<hibernate-mapping package="com.example.pojo.entity.user">

    <!-- 將 User 類別對應到資料表 users -->
    <class name="User" table="users">

        <!-- 主鍵欄位：id，自動遞增策略（identity） -->
        <id name="id" column="id">
            <generator class="identity"/>
        </id>

        <!-- 使用者名稱欄位：對應 username，必填 -->
        <property name="username" column="username" not-null="true"/>

        <!-- 使用者密碼欄位：對應 password，必填 -->
        <property name="password" column="password" not-null="true"/>

        <!-- 電子郵件欄位：對應 email，必填 -->
        <property name="email" column="email" not-null="true"/>

        <!-- 聯絡電話欄位：對應 phone，選填 -->
        <property name="phone" column="phone"/>

        <!-- 建立時間欄位：對應 created_at，資料型態為 LocalDateTime 或 Date -->
        <property name="createdAt" column="created_at"/>

        <!-- 更新時間欄位：對應 updated_at，資料型態為 LocalDateTime 或 Date -->
        <property name="updatedAt" column="updated_at"/>

    </class>
</hibernate-mapping>
