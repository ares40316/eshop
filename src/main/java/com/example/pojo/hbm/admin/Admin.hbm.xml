<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- 指定映射對應的 Java 類別所在的 package -->
<hibernate-mapping package="com.example.pojo.entity.admin">

    <!-- 將 Admin 類別映射到資料表 admins -->
    <class name="Admin" table="admins">

        <!-- 主鍵欄位：管理員 ID，自動遞增 -->
        <id name="id" column="id">
            <generator class="identity"/>
        </id>

        <!-- 登入帳號名稱，必填 -->
        <property name="username" column="username" not-null="true"/>

        <!-- 登入密碼，必填 -->
        <property name="password" column="password" not-null="true"/>

        <!-- 管理員角色（如 super_admin、editor 等），必填 -->
        <property name="role" column="role" not-null="true"/>

        <!-- 帳號建立時間（對應 LocalDateTime，可為 null） -->
        <property name="createdAt" column="created_at"/>

        <!-- 最後更新時間（對應 LocalDateTime，可為 null） -->
        <property name="updatedAt" column="updated_at"/>

    </class>
</hibernate-mapping>
